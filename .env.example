# Azure OpenAI Configuration
DEPLOYMENT_NAME=gpt-5-mini
API_VERSION=2025-01-01-preview
AZURE_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here

# Database Configuration
DATABASE_CONNECTION_STRING=mssql+pyodbc://username:password@server/database?driver=ODBC+Driver+17+for+SQL+Server

# Paths
RDL_PATH=./data_upload
CACHE_DIR=./cache
LOG_DIR=./logs

# Encoding & Filtering
UTF8_ENCODING=true
SCHEMA_EXCLUSIONS=sys,information_schema
TABLE_EXCLUSIONS=temp_,test_,backup_,old_

# Regex patterns for table exclusions (comma-separated)
TABLE_EXCLUSION_PATTERNS=.*_\d{8}$,.*_\d{6}$,.*_backup.*,.*_archive.*,.*_copy.*,.*_old.*

# Cache TTL (hours)
DISCOVERY_CACHE_HOURS=168
SEMANTIC_CACHE_HOURS=168

# Connection timeout (seconds)
DISCOVERY_TIMEOUT=300

# Batching
ENTITY_BATCH_SIZE=2
DIMENSION_BATCH_SIZE=2
FACT_BATCH_SIZE=1

# Compression strategy (detailed, tldr, map_reduce, recap)
COMPRESSION_STRATEGY=tldr

# Assembly retries
ASSEMBLY_MAX_RETRIES=3

# Query execution defaults
DEFAULT_ROW_LIMIT=10
MAX_ROW_LIMIT=1000
QUERY_TIMEOUT_SEC=60

# Confidence thresholds
CONFIDENCE_HIGH=0.85
CONFIDENCE_MEDIUM=0.70
CONFIDENCE_LOW=0.50
